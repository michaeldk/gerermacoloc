<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="GererMaColoc">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.gerermacoloc.app.domain.Balance</class>
		<class>com.gerermacoloc.app.domain.Colocation</class>
		<class>com.gerermacoloc.app.domain.ColocationList</class>
		<class>com.gerermacoloc.app.domain.Comment</class>
		<class>com.gerermacoloc.app.domain.Invitation</class>
		<class>com.gerermacoloc.app.domain.ListObject</class>
		<class>com.gerermacoloc.app.domain.Message</class>
		<class>com.gerermacoloc.app.domain.MessageSeenBy</class>
		<class>com.gerermacoloc.app.domain.Notification</class>
		<class>com.gerermacoloc.app.domain.Operation</class>
		<class>com.gerermacoloc.app.domain.Payment</class>
		<class>com.gerermacoloc.app.domain.PaymentParticipation</class>
		<class>com.gerermacoloc.app.domain.Ping</class>
		<class>com.gerermacoloc.app.domain.Roommate</class>
		<class>com.gerermacoloc.app.domain.RoommateList</class>
		<class>com.gerermacoloc.app.domain.Task</class>
		<class>com.gerermacoloc.app.domain.TaskOrder</class>
		<class>com.gerermacoloc.app.domain.Versionable</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> 
	        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:5432/MaColoc" /> 
	        <property name="javax.persistence.jdbc.user" value="macoloc" />
	        <property name="javax.persistence.jdbc.password" value="macoloc" /> 
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>